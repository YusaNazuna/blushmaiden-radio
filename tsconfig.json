{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "baseUrl": "./src",
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    // pixi.jsのモジュール見つからないエラーを回避できる
    "moduleResolution": "Node",
    // "strict": true,
    "alwaysStrict": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": false
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules", "lib"],
  "typedocOptions": {
    "name": "tsuki&nzn",
    "mode": "file",
    "out": "./docs"
  }
}
